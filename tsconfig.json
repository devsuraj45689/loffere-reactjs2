{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src", // This allows imports relative to 'src'
    "paths": {
      "assets/*": ["src/assets/*"], // Resolve 'assets' to 'src/assets'
      "styles/*": ["src/styles/*"], // Resolve 'styles' to 'src/styles'
      "lib/*": ["src/lib/*"], // Resolve 'lib' to 'src/lib'
      "store/*": ["src/store/*"], // Resolve 'store' to 'src/store'
      "data/*": ["src/data/*"], // Resolve 'data' to 'src/data'
      "components/*": ["src/components/*"],
      "configs/*": ["src/configs/*"],
      "sections/*": ["src/sections/*"],
      "layouts/*": ["src/layouts/*"]
    } // No aliases, just 'baseUrl' for resolving
  },
  "include": ["src", "./**/*.ts", "./**/*.tsx", "./**/*.js", "./**/*.jsx"]
}
